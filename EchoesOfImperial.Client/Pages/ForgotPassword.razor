@page "/forgot-password"
@using EchoesOfImperial.Shared.DTOs

<PageTitle>Forgot Password - Echoes of Imperial</PageTitle>

<div class="auth-container">
    <div class="auth-panel">
        <div class="auth-header">
            <h1>PASSWORD RECOVERY</h1>
            <p>Reset your access credentials</p>
        </div>

        <EditForm Model="@forgotPasswordModel" OnValidSubmit="@HandleForgotPassword" class="auth-form">
            <DataAnnotationsValidator />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert-error">
                    <span class="error-icon">⚠</span>
                    @errorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert-success">
                    <span class="success-icon">✓</span>
                    @successMessage
                </div>
            }

            @if (!isSubmitted)
            {
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <InputText id="email" type="email" @bind-Value="forgotPasswordModel.Email" 
                              class="form-control" placeholder="Enter your registered email" />
                    <ValidationMessage For="@(() => forgotPasswordModel.Email)" />
                </div>

                <button type="submit" class="btn-primary" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner"></span>
                        <span>Sending...</span>
                    }
                    else
                    {
                        <span>Send Reset Link</span>
                    }
                </button>
            }
        </EditForm>

        <div class="auth-footer">
            <a href="/login" class="link-gold">← Back to login</a>
            <span class="separator">•</span>
            <a href="/register" class="link-gold">Create account</a>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordDto forgotPasswordModel = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;
    private bool isSubmitted;

    private async Task HandleForgotPassword()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;
        StateHasChanged();

        try
        {
            // TODO: Implement actual API call when backend endpoint is available
            // For now, this simulates the password reset request
            await Task.Delay(1500);

            successMessage = "If an account exists with this email, you will receive a password reset link shortly. Please check your inbox.";
            isSubmitted = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
